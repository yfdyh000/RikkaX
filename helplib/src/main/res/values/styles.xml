<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HelpTheme.DayNight" parent="HelpTheme.Light.DarkActionBar"/>

    <style name="HelpTheme" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/help_color_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/help_color_primary_dark_dark</item>
        <item name="android:colorAccent">@color/help_color_accent_dark</item>
        <item name="preferenceTheme">@style/HelpTheme.PreferenceThemeOverlay</item>
        <item name="markdownStyle">@style/Markdown</item>
    </style>

    <style name="HelpTheme.Light" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/help_color_primary_light</item>
        <item name="android:colorPrimaryDark">@color/help_color_primary_dark_light</item>
        <item name="android:colorAccent">@color/help_color_accent_light</item>
        <item name="preferenceTheme">@style/HelpTheme.PreferenceThemeOverlay</item>
        <item name="markdownStyle">@style/Markdown.Light</item>
    </style>

    <style name="HelpTheme.Light.DarkActionBar" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/help_color_primary_light</item>
        <item name="android:colorPrimaryDark">@color/help_color_primary_dark_light</item>
        <item name="android:colorAccent">@color/help_color_accent_light</item>
        <item name="preferenceTheme">@style/HelpTheme.PreferenceThemeOverlay</item>
        <item name="markdownStyle">@style/Markdown.Light</item>
    </style>

    <style name="HelpTheme.PreferenceThemeOverlay" parent="PreferenceThemeOverlay">
        <item name="preferenceCategoryStyle">@style/HelpTheme.Preference.Category</item>
        <item name="preferenceStyle">@style/HelpTheme.Preference</item>
    </style>

    <style name="HelpTheme.Preference.Category" parent="Preference.Category.Material">
        <item name="android:layout">@layout/helplib_header</item>
    </style>

    <style name="HelpTheme.Preference" parent="Preference.Material">
        <item name="android:layout">@layout/helplib_item</item>
    </style>

    <style name="HelpHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:paddingStart">?android:listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:listPreferredItemPaddingEnd</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>